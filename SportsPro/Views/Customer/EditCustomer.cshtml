@model Customer
@{
    Layout = "_Layout";
    ViewData["Title"] = ViewData["Action"] + " Customer";
    ViewData["SelectedCategory"] = "Customer";
}

@section scripts {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
<h1>@ViewData["Title"]</h1>

<form asp-action="@ViewData["Action"]" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- FirstName, LastName, Address, City, State, PostalCode, CountyID, County, Phone, Email-->

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="LastName">LastName</label>
        <input asp-for="LastName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="PostalCode">Postal Code</label>
        <input asp-for="PostalCode" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="CountryID">Country</label>
        <select asp-for="CountryID"
                asp-items="@(new SelectList(ViewBag.Countries,
                                "CountryID", "Name"))"
                class="form-control">    
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <input type="hidden" asp-for="CustomerID" />
    <input type="hidden" asp-for="Active" value="true" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>
</form>
