@model Technician
@{
    Layout = "_Layout";
    ViewData["Title"] = "Delete Technician";
    ViewData["SelectedCategory"] = "Technician";
}
<h1>@ViewData["Title"]</h1>
<h3>@Model.Name</h3>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="TechnicianID" />
    <input type="hidden" asp-for="Name" />
    <input type="hidden" asp-for="Phone" />
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="Active" />

    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>
</form>
